<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    app:cardCornerRadius="6dp"
    android:layout_marginRight="12dp"
    android:layout_height="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_tools_tours" />

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:src="@drawable/ic_tours"
            app:layout_constraintLeft_toLeftOf="@id/iv_item_background"
            app:layout_constraintRight_toRightOf="@id/iv_item_background"
            app:layout_constraintTop_toTopOf="@id/iv_item_background" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            style="@style/TopItemText"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_background"
            app:layout_constraintLeft_toLeftOf="@id/iv_item_background"
            app:layout_constraintRight_toRightOf="@id/iv_item_background"
            tools:text="Авиабилеты" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>