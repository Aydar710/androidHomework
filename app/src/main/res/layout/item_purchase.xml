<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="16dp"
    android:paddingBottom="28dp">

    <ImageView
        android:id="@+id/iv_stuff"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_circle_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_circle_minus"
        app:layout_constraintBottom_toBottomOf="@id/iv_add"
        app:layout_constraintRight_toLeftOf="@id/tv_count"
        app:layout_constraintTop_toTopOf="@id/iv_add" />

    <TextView
        style="@style/DefaultText14.TextGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        android:text="1500"
        app:layout_constraintBottom_toBottomOf="@id/iv_stuff"
        app:layout_constraintLeft_toRightOf="@id/iv_stuff"
        app:layout_constraintTop_toTopOf="@id/iv_stuff" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/DefaultText14.TextGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_add"
        app:layout_constraintRight_toLeftOf="@id/iv_add"
        app:layout_constraintTop_toTopOf="@id/iv_add"
        tools:text="4" />

    <TextView
        style="@style/DefaultText14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        android:text="Кружка белая"
        app:layout_constraintBottom_toBottomOf="@id/iv_stuff"
        app:layout_constraintLeft_toRightOf="@id/iv_stuff"
        app:layout_constraintTop_toTopOf="@id/iv_stuff" />


</androidx.constraintlayout.widget.ConstraintLayout>