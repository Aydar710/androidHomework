<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#7C5BFF</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="DefaultText14" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="DefaultText14.DefaultText16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultText14.TextGray" >
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultText14.TextBlack">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopItemText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultText14.DefaultText16.BotItemTextMain">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2D6190</item>
    </style>

    <style name="DefaultText14.DefaultText16.BotItemTextSecondary">
        <item name="android:textColor">#2D6190</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
